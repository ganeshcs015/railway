<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/edittrainno"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/showtrain"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="76dp"
        android:ems="10"
        android:inputType="text|number"
        android:hint="Train no(Optional)" />

    <EditText
        android:id="@+id/editdstn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edittrainno"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="33dp"
        android:ems="10"
        android:inputType="text" 
        android:hint="Destination"/>

    <EditText
        android:id="@+id/editsource"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editdstn"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Source" />

    <Button
        android:id="@+id/showtrain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="104dp"
        android:layout_marginRight="24dp"
        android:text="Show Trains" />

    <Button
        android:id="@+id/datepick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edittrainno"
        android:layout_marginLeft="38dp" />

</RelativeLayout>
